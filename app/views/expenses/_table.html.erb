<div class="w-full lg:w-5/6">
  <div class="bg-white shadow-md rounded my-6">
    <table class="min-w-max w-full table-auto">
      <thead>
        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
          <th class="py-3 px-6 text-left">Expense Name</th>
          <th class="py-3 px-6 text-left">Expense Description</th>
          <th class="py-3 px-6 text-center">Event</th>
          <th class="py-3 px-6 text-center">Amount</th>
          <th class="py-3 px-6 text-center">Expense Creator</th>
          <th class="py-3 px-6 text-center">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-600 text-sm font-light">
        <% @expenses.each do |expense| %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-6 text-left whitespace-nowrap">
              <div class="flex items-center">
                <%= expense.name %>
              </div>
            </td>
            <td class="py-3 px-6 text-left">
              <div class="flex items-center">
                <%= expense.description %>
              </div>
            </td>
            <td class="py-3 px-6 text-center">
              <div class="flex items-center justify-center">
                <%= expense.event.name %>
              </div>
            </td>
            <td class="py-3 px-6 text-center">
              <div class="flex items-center justify-center">
                <%= expense.amount %>
              </div>
            </td>
            <td class="py-3 px-6 text-center">
              <div class="flex items-center justify-center">
                <%= expense.user.firstname %> <%= expense.user.lastname %>
              </div>
            </td>
            <td class="py-3 px-6 text-center">
              <div class="flex item-center justify-center">
                <%= link_to edit_expense_path(expense) do %>
                  <div
                    class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                      />
                    </svg>
                  </div>
                <% end %>
                <%= link_to expense, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <div
                    class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                      />
                    </svg>
                  </div>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr class="border-b border-gray-200 hover:bg-gray-100">
          <td class="py-3 px-6 text-left whitespace-nowrap"></td>
          <td class="py-3 px-6 text-left"></td>
          <td class="py-3 px-6 text-center"></td>
          <td class="py-3 px-6 text-center">
            <div class="flex items-center justify-center">
              <%= @expenses.sum(:amount) %>
            </div>
          </td>
          <td class="py-3 px-6 text-center"></td>
          <td class="py-3 px-6 text-center"></td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
